{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2020","DOM","DOM.Iterable"],
    "allowJs": false,
    "checkJs": false,
    "declaration": true, // 启用类型声明文件的生成
    "sourceMap": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["node_modules", "**/*.spec.ts", "./dist/*"]
}
